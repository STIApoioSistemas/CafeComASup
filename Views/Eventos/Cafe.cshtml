@model FuncionarioEventoVM
@{
	ViewData["Title"] = "Balanço Institucional 2023";
}

<div class="containerCafe">
	<div class="header">
		<h1>@Model.Titulo</h1>
	</div>
	<div class="d-flex align-items-center justify-content-center font-def mt-5 gap-5">
		<div class="img">
			<img src="~/img/logo.png"/>
		</div>
		
		<div class="d-flex flex-column align-items-stretch">
			<div>
				<p class="fs-5 max-wid-100 text-center">@Model.Descricao</p>

				<p class="fs-5 text-center">
					Olá, <strong>@Model.Nome</strong><br />
					Você está confirmado(a) no <strong>Balanço Institucional 2023 e Perspectivas Futuras</strong><br /><br />
					Data e Hora do Protocolo: <strong>@Model.DataConfirmacao</strong><br />
					Número do Protocolo: <strong>@Model.Protocolo</strong><br />
				</p>
			</div>
		</div>

	</div>
	<p class="mx-auto fit-content fs-5 mt-5">*Por gentileza, caso haja desistência, entre em contato no email: <a href="mailto:imprensadaee@sp.gov.br">imprensadaee@sp.gov.br</a> até 11/12/2023</p>
</div>